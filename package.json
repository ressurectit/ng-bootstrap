{
    "name": "@anglr/bootstrap",
    "version": "3.0.7",
    "description": "Angular module wrapping bootstrap components",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts": {
        "build": "npm run ngc",
        "postbuild": "copyfiles -u 2 dist/src/**/*.* dist && copyfiles -u 2 dist/testing/**/*.* testing && rimraf dist/src dist/dist dist/node_modules dist/testing",
        "clean": "rimraf dist testing",
        "clean:deps": "rimraf node_modules",
        "clean:all": "npm run clean && npm run clean:deps",
        "ngc": "ngc",
        "prepublish": "npm run bundle:package",
        "postpublish": "npm run clean",
        "republish": "npm publish --force",
        "bundle": "webpack",
        "bundle:min": "webpack --env.minify",
        "bundle:package": "npm run clean && npm run build && npm run bundle && npm run bundle:min",
        "deploy:stable": "npp -b",
        "deploy:next": "npp -p -b -s \"beta\" -t \"next\"",
        "deploy:stable:local": "npp -b --registry http://local:4873",
        "deploy:next:local": "npp -p -b -s \"beta\" -t \"next\" --registry http://local:4873"
    },
    "keywords": [
        "angular",
        "ng",
        "bootstrap",
        "components"
    ],
    "author": "kukjevov",
    "license": "MIT",
    "dependencies": {
        "@angular/core": "^4.2.0",
        "@angular/common": "^4.2.0",
        "@angular/forms": "^4.2.0",
        "core-js": "~2.4.1",
        "zone.js": "^0.8.12",
        "rxjs": "^5.2.0",
        "@anglr/common": "^3.0.0"
    },
    "peerDependencies": {
        "bootstrap": "~3.3.7",
        "jquery": "~2.2.1",
        "moment": "~2.16.0",
        "bootstrap-select": "^1.11.3",
        "eonasdan-bootstrap-datetimepicker": "^4.17.47",
        "typeahead.js": "~0.11.1",
        "handlebars": "~4.0.6"
    },
    "devDependencies": {
        "@types/jquery": "~2.0.40",
        "@types/bootstrap": "~3.3.32",
        "@types/eonasdan-bootstrap-datetimepicker": "~4.17.22",
        "@types/typeahead": "~0.11.27",
        "@types/handlebars": "~4.0.31",
        "@anglr/types": "~1.1.2",
        "@angular/compiler-cli": "^4.2.0",
        "@angular/compiler": "^4.2.0",
        "rimraf": "~2.6.1",
        "copyfiles": "~1.2.0",
        "typescript": "2.3.4",
        "webpack": "2.6.1",
        "npm-publish-package": "~1.2.0"
    }
}
