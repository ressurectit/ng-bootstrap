{
    "compilerOptions":
    {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": false,
        "baseUrl": ".",
        "paths":
        {
            "@anglr/bootstrap/core": ["./core"],
            "@anglr/bootstrap/datetimepicker": ["./datetimepicker"],
            "@anglr/bootstrap/select": ["./select"],
            "@anglr/bootstrap/switch": ["./switch"],
            "@anglr/bootstrap/typeahead": ["./typeahead"]
        },
        "lib":
        [
            "es2016",
            "dom"
        ],
        "types": 
        [
            "bootstrap",
            "bootstrap-select",
            "typeahead",
            "handlebars",
            "bootstrap-switch"
        ],
        "typeRoots": 
        [
            "node_modules/@types",
            "node_modules/@anglr/types"
        ],
        "plugins":
        [
            {
                "name": "@angular/language-service"
            }
        ]
    },
    "exclude":
    [
        "node_modules",
        "dist",
        "karma-test-shim.ts"
    ],
    "angularCompilerOptions":
    {
        "fullTemplateTypeCheck": true
    }
}